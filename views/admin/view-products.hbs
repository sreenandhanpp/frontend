    <div class="container">
        
            <a href="/admin/add-product" class="btn btn-success float-end m-5">+</a>
        
<table class="table mt-5">
      
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Discription</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
{{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px; height: 50px;" src="/images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick=" return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
      </td>
    </tr>
{{/each}}
  </tbody>
</table>
    </div>
      