
  <div class="container">
    <div class="row mt-5">
      {{#each products}}
      <div class="col-md-3 ">
        <div class="card" style="width: 15rem;">
          <img style="height: 17rem;" src="/images/{{this._id}}.jpg" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"> {{ this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">{{this.price}}Rs</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>